<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/upper_text_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/upper_text_width"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/big_circle_diameter"
        android:layout_height="@dimen/big_circle_diameter"
        android:background="@drawable/black_mem_ring"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/upper_left"
            android:layout_width="@dimen/big_circle_radius"
            android:layout_height="@dimen/big_circle_radius"
            android:background="@drawable/upper_left_circle"/>
        <Button
            android:id="@+id/upper_right"
            android:layout_width="@dimen/big_circle_radius"
            android:layout_height="@dimen/big_circle_radius"
            android:background="@drawable/upper_right_circ"
            android:layout_alignParentRight="true" />
        <Button
            android:id="@+id/lower_left"
            android:layout_width="@dimen/big_circle_radius"
            android:layout_height="@dimen/big_circle_radius"
            android:background="@drawable/lower_left_circ"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/lower_right"
            android:layout_width="@dimen/big_circle_radius"
            android:layout_height="@dimen/big_circle_radius"
            android:background="@drawable/lower_right_circ"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/small_circle"
            android:layout_width="@dimen/small_circle_diameter"
            android:layout_height="@dimen/small_circle_diameter"
            android:background="@drawable/innercircle"
            android:layout_centerInParent="true"
            android:elevation="8dp"
            android:text="Round\n1"
            android:textSize="20sp"
            android:gravity="center"/>

    </RelativeLayout>
</RelativeLayout>